            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
          <a class="brand" href="#">Scrum Board</a>
          <div class="nav-collapse">
            <ul class="nav">
							<li class="active">
							  <%=raw menu_item('root', 'Home')%>
              </li>
              <li>
                <%=raw menu_item('projects_chamado', 'Abertura de Chamados')%>
              </li>
            </ul>
          </div><!--/.nav-collapse -->
        </div>
      </div>
    </div>

    <div class="container">
		<%= yield %>
    </div> <!-- /container -->

